{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./es",
    "allowJs": false,
    "strict": true,
    "target": "ES2015",
    "module": "ES2015",
    "lib": ["es2015"],
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "compileOnSave": false
}
